{
  "name": "buutti-fullstack-assignment",
  "version": "1.0.0",
  "description": "Example solution for Buutti Fullstack Assignment",
  "type": "module",
  "exports": "./dist/server.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "start-dev": "npx nodemon --exec ts-node server.ts",
    "test": "cross-env NODE_ENV=test jest --coverage --testTimeout=10000"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^29.2.5",
    "@types/lowdb": "^1.0.11",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "jest": "^29.3.1",
    "lowdb": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/tests/",
      "/client/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/client/"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^@src/(.)$": "<rootDir>/src/$1"
    }
  }
}
